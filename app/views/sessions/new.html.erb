<h1>Log in</h1>

<div class="row">
	<div class="col-md-4">
		<%= form_tag "/login" do %>
			
			<div class="form-group">
				<%= label_tag :email %><br />
				<%= text_field_tag :email, nil, class: "form-control" %>
			</div>
			
			<div class="form-group">
				<%= label_tag :password %><br />
				<%= password_field_tag :password, nil, class: "form-control" %>
			</div>
			
			<div class="form-group">
				<%= submit_tag "Log in", class: "btn btn-primary" %>
      </div>
		
		<% end %>
	</div>
</div>

